@model IEnumerable<Model.Product>

@{
    Layout = "~/Views/Shared/TemplateProducts.cshtml";
}




<br /><br />
<br />
<br /><br />
      <div class="form-row col-md-12">
          <div class="form-group col-md-10">
          <input class="form-control"  placeholder="Search for products..."/></div>
          
          <div class="form-group col-md-2">
              <button type="button" class="but">Search</button>
          </div>
          </div>
<br />
<br />
<div class="col-md-12">
    <br />
    <div class="awesome-project-content">
      @{ var x = 0;}
    @foreach (var item in Model)
    {
        x++;
        string ch = x + ".jpg";
            <div class="col-md-4 col-sm-4 col-xs-12 ">
                <div class="single-awesome-project">
                    <div class="awesome-img">
                        <a href="#">
                        <img src="~/ebusiness/img/portfolio/@ch" alt="" /></a>
                        <div class="add-actions text-center">
                            <div class="project-dec">
                                <h4>@item.nameprod</h4>
                                <span>@item.price DT</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
}
    
    </div>

</div>

<style>

    .but {
        background-color: white;
        color: black;
        border: 2px solid gold;
        padding: 5px 15px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

        .but:hover {
            background-color: gold; /* Green */
            color: white;
            border-radius: 10px 10px 10px 10px;
        }
</style>